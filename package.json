{
  "name": "todo-api-server",
  "version": "1.0.0",
  "description": "A simple RESTful server for a react native todo app.",
  "main": "src/index.js",
  "scripts": {
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production pm2 start dist/index.js",
    "dev": "nodemon src/index.js --exec \"node --require 'babel-register'\"",
    "build": "cross-env NODE_ENV=production babel src -d dist",
    "serve": "node --require 'babel-register' dist/index.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests --require 'babel-register' --exit",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit --require 'babel-register' --exit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/api/tests/integration --require 'babel-register' --exit",
    "docs": "apidoc -i src/ -o docs/"
  },
  "repository": "git@github.com:joeRob2468/todo-api-server.git",
  "author": "John Boyer",
  "license": "MIT",
  "apidoc": {
    "url": "localhost:3000/v1"
  },
  "private": true,
  "dependencies": {
    "apidoc": "^0.17.6",
    "babel-eslint": "^8.2.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "cross-env": "^5.1.4",
    "crypto": "^1.0.1",
    "dotenv-safe": "^5.0.1",
    "eslint": "^4.18.2",
    "express": "^4.16.2",
    "express-validation": "^1.0.2",
    "http-status": "^1.0.1",
    "joi": "^13.1.2",
    "jwt-simple": "^0.5.1",
    "moment-timezone": "^0.5.14",
    "mongoose": "^5.0.9",
    "morgan": "^1.9.0",
    "pm2": "^2.10.1",
    "uuid": "^3.2.1",
    "winston": "^3.0.0-rc2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.1",
    "nyc": "^11.6.0",
    "supertest": "^3.0.0"
  }
}
